<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.mapper.CategoryMapper">

    <!-- 查询全部 -->
    <select id="selectAll" resultType="com.project.model.CategoryModel">
        SELECT * FROM category
    </select>

    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="long" resultType="com.project.model.CategoryModel">
        SELECT * FROM category WHERE category_id = #{id}
    </select>

    <!-- 插入 -->
    <insert id="insert" parameterType="com.project.model.CategoryModel">
        INSERT INTO category(name, parent_id, status, sort, create_time, update_time)
        VALUES (#{name}, #{parentId}, #{status}, #{sort}, NOW(), NOW())
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="com.project.model.CategoryModel">
        UPDATE category
        SET name = #{name},
            parent_id = #{parentId},
            status = #{status},
            sort = #{sort},
            update_time = NOW()
        WHERE category_id = #{categoryId}
    </update>

    <!-- 删除 -->
    <delete id="deleteById" parameterType="long">
        DELETE FROM category WHERE category_id = #{id}
    </delete>

</mapper>
